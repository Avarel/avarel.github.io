medium-screen()
  @media (max-width 576px)
    {block}

large-screen()
  @media (max-width 768px)
    {block}

@keyframes slideleft
  0%
    opacity 0
    transform translateX(200%)
  100%
    opacity 1
    transform none

@keyframes slideup
  0%
    opacity 0
    transform translateY(100%)
  100%
    opacity 1
    transform none
    
.window
  // transform perspective(1000px) rotateY(-10deg) rotateX(5deg) rotate(0deg)
  // margin-left 10px
  // margin-right 10px
  
  font-size 15px
  
  +medium-screen()
    // font-size 14px
    margin-bottom 20px
  
  .title
    border-radius 5px 5px 0 0
    height 30px
    font-size 15px
    line-height 30px
    color black
    text-align center
    background linear-gradient(to bottom, #e8e8e8, #bcbbbc)

  .terminal
    display block
    // margin: 10px;
    padding 15px
    background black
    font-family 'Fira Code', 'Menlo', 'Courier', monospace
    border-radius 0 0 5px 5px
    overflow-y auto
    overflow-x hidden
    color white
    height 600px
    max-height 80vh
    
    +large-screen()
      height 300px
    
    +medium-screen()
      height 250px
    
    code
      white-space pre
      width inherit
      color white

body
  background url('../assets/bg-tile.png'), #6d0019
  min-height 100vh
  // max-width: 100vw;

.hero
  background linear-gradient(120deg, #a90329 49.9%, #00000000 50%)
  overflow auto
  color white
  .row
    height 100vh
  .business-card
    animation 2s slideleft
    
    +medium-screen()
      animation 2s slideup
      margin-bottom 50px
    
    .logo
      margin 5%
    .link
      margin-left 15%
      margin-right 15%
      transition transform 0.2s
      &:hover
        transform scale(1.1)